
<div class="container">
<div class="row">
  <%= render 'list', user: @user, book: @book  %>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  
  <table class="table">
    <tbody>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user_path(user) do %>
        <%= image_tag user.get_profile_image(100, 100) %>
        <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
          <%= link_to "show", user_path(user) %>
        </td>
      </tr>
      <% end %>
      </tbody>
  </table>
  </div>
</div>
</div>
